<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/text_research_coffee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="케냐 AA"
        android:textSize="30dp"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorToolbarBlack"/>

    <TextView
        android:id="@+id/text_research_coffee_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019 05 05"
        android:textSize="14dp"
        android:paddingStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/text_research_coffee_name"
        android:textColor="@color/colorToolbarBlack"/>

    <TextView
        android:id="@+id/text_research_coffee_tag1"
        android:text="tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/text_research_coffee_date"
        android:textColor="@color/colorToolbarBlack"/>

