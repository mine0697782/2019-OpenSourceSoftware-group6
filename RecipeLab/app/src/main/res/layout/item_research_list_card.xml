<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/border_researching_frame"
        android:padding="15dp">

        <TextView
            android:id="@+id/text_on_going"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:text="진행중"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_research_coffee_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="에티오피아 예가치프"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/text_on_going" />

        <TextView
            android:id="@+id/text_research_coffee_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="2019 05 05"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/text_research_coffee_name" />

        <TextView
            android:id="@+id/text_research_coffee_tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_researching_frame"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="5dp"
            android:text="tag"
            app:layout_constraintTop_toBottomOf="@id/text_research_coffee_date" />

        <TextView
            android:id="@+id/text_research_coffee_tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_researching_frame"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="5dp"
            android:text="tag"
            app:layout_constraintLeft_toRightOf="@+id/text_research_coffee_tag1"
            app:layout_constraintTop_toBottomOf="@id/text_research_coffee_date" />

        <TextView
            android:id="@+id/text_research_coffee_tag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_researching_frame"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="5dp"
            android:text="tag"
            app:layout_constraintLeft_toRightOf="@+id/text_research_coffee_tag2"
            app:layout_constraintTop_toBottomOf="@id/text_research_coffee_date" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    <androidx.recyclerview.widget.RecyclerView-->
    <!--        android:id="@+id/rv_research_tag"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        app:layout_constraintTop_toBottomOf="@id/text_coffee_date"/>-->

</androidx.constraintlayout.widget.ConstraintLayout>